<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.StatisticsUzbekistanFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="12dp"
        android:clipToPadding="false"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_prevention_adapter"
                    android:padding="8dp">

                    <LinearLayout
                        android:id="@+id/llTotalCases"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTotalCases"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="sans-serif-medium"
                            android:text="Total cases" />

<!--                        <ImageView-->
<!--                            android:id="@+id/ivTotalCases"-->
<!--                            android:layout_width="18dp"-->
<!--                            android:layout_height="18dp"-->
<!--                            android:layout_gravity="center_vertical"-->
<!--                            android:layout_marginStart="8dp"-->
<!--                            android:src="@drawable/ic_menu_camera" />-->

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTotalCasesValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llTotalCases"
                        android:fontFamily="sans-serif-medium"
                        android:text="295,499"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:scaleType="center"
                        android:src="@drawable/statistica1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:scaleType="center"
                        android:src="@drawable/statistica1_" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_prevention_adapter"
                    android:padding="8dp">

                    <LinearLayout
                        android:id="@+id/llActiveCases"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvActiveCases"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="sans-serif-medium"
                            android:text="Active cases" />

<!--                        <ImageView-->
<!--                            android:id="@+id/ivActiveCases"-->
<!--                            android:layout_width="18dp"-->
<!--                            android:layout_height="18dp"-->
<!--                            android:layout_gravity="center_vertical"-->
<!--                            android:layout_marginStart="8dp"-->
<!--                            android:src="@drawable/ic_menu_camera" />-->

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvActiveCasesValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llActiveCases"
                        android:fontFamily="sans-serif-medium"
                        android:text="295,499"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:scaleType="center"
                        android:src="@drawable/statistica2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:scaleType="center"
                        android:src="@drawable/statistica2_" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_prevention_adapter"
                    android:padding="8dp">

                    <LinearLayout
                        android:id="@+id/llRecovered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvRecovered"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="sans-serif-medium"
                            android:text="Recovered" />

<!--                        <ImageView-->
<!--                            android:id="@+id/ivRecovered"-->
<!--                            android:layout_width="18dp"-->
<!--                            android:layout_height="18dp"-->
<!--                            android:layout_gravity="center_vertical"-->
<!--                            android:layout_marginStart="8dp"-->
<!--                            android:src="@drawable/ic_menu_camera" />-->

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvRecoveredValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llRecovered"
                        android:fontFamily="sans-serif-medium"
                        android:text="295,499"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:scaleType="center"
                        android:src="@drawable/statistica3" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:scaleType="center"
                        android:src="@drawable/statistica3_" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_prevention_adapter"
                    android:padding="8dp">

                    <LinearLayout
                        android:id="@+id/llDeath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDeath"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="sans-serif-medium"
                            android:text="Death" />

<!--                        <ImageView-->
<!--                            android:id="@+id/ivDeath"-->
<!--                            android:layout_width="18dp"-->
<!--                            android:layout_height="18dp"-->
<!--                            android:layout_gravity="center_vertical"-->
<!--                            android:layout_marginStart="8dp"-->
<!--                            android:src="@drawable/ic_menu_camera"/>-->

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDeathValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llDeath"
                        android:fontFamily="sans-serif-medium"
                        android:text="295,499"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:scaleType="center"
                        android:src="@drawable/statistica4" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:scaleType="center"
                        android:src="@drawable/statistica4_" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@drawable/background_prevention_adapter"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/image1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_statistics_text"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:text="Uzbekistan News"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:layout_marginTop="4dp"
                        android:text="5 Syptoms of Coronavirus..."

                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@drawable/background_prevention_adapter">

                <TextView
                    android:id="@+id/tvStatisticsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Statistics"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"/>

                <com.androidplot.xy.XYPlot
                    android:id="@+id/xyPlot"
                    android:layout_marginTop="4dp"
                    style="@style/APDefacto.Light"
                    android:layout_width="fill_parent"
                    android:layout_height="300dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Covid19App"
        android:layout_centerInParent="true"/>

</RelativeLayout>